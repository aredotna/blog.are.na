= partial 'layouts/navigation'

- content_for :main do
  %h1= @post.title
  .posts
    - @post.contents.each do |post|
      .post{:class=>post._class}
        - if is_channel?(post)
          %h2= link_to post.title, slug_encode(post.slug)

        - else
          - if post.title
            %h2= post.title
          - if post.has_embed?
            = post.embed.html
          - elsif post.has_image?
            .post-image
              = link_to post.image.original.url, target: '_blank' do
                = image_tag post.image.display.url
          - else
            = post.content_html

    .metadata
      .connected
        = "#{@post.user.username} #{time_ago_in_words(@post_date)} ago"
